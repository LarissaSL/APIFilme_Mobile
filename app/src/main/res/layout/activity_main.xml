<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        android:src="@drawable/fundo" />

    <TextView
        android:id="@+id/saudacoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Saudações Filmelover!"
        android:gravity="center"
        android:fontFamily="@font/poppins_bold"
        android:textSize="26sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageView"
        android:padding="16dp" />

    <TextView
        android:id="@+id/nomeDoApp"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/saudacoes"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins"
        android:padding="16dp"
        android:text="Qual filme iremos buscar agora?"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/searchBar"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nomeDoApp"
        android:background="@drawable/caixa_text"
        android:hint="Digite o nome do Filme aqui"
        android:textColor="@color/fundo"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:padding="20dp" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins_bold"
        android:textSize = "18sp"
        android:backgroundTint="@color/red"
        android:padding="16dp"
        android:text="Buscar"
        android:textColor="@color/white"/>

</RelativeLayout>
